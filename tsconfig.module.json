{
  "extends": "./tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist/module",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}